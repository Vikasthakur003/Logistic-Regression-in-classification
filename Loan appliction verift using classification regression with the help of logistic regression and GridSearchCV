import numpy as np
import pandas as pd

user_input = pd.DataFrame(
    np.zeros((1, X.columns.shape[0])),
    columns=X.columns
)

user_input_scaled = scaler.transform(user_input)
user_input_scaled_predic = best_model.predict(user_input_scaled)
print(f"Predicted output ","Yes" if user_input_scaled_predic[0] == 1 else "No" )
